<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#C6C6C6</item>
        <item name="colorControlActivated">#710F9F</item>
    </style>

    <style name="FeedbackButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#710F9F</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="FeedbackFromText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#C6C6C6</item>
        <item name="colorControlActivated">#710F9F</item>
        <item name="colorControlHighlight">#710F9F</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
